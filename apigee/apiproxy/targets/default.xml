<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<TargetEndpoint name="default">
  <Description/>
  <FaultRules/>
  <PreFlow name="PreFlow">
    <Request>
      <Step>
        <Condition>urirequest.model Matches "*gemini*"</Condition>
        <Name>Assign-Message-Gemini</Name>
      </Step>
      <Step>
        <Condition>urirequest.model Matches "*gpt*"</Condition>
        <Name>Assign-Message-OpenAI</Name>
      </Step>
      <Step>
        <Condition>urirequest.model Matches "*claude*"</Condition>
        <Name>Assign-Message-Anthropic</Name>
      </Step>
    </Request>
    <Response/>
  </PreFlow>
  <PostFlow name="PostFlow">
    <Request/>
    <Response/>
  </PostFlow>
  <HTTPTargetConnection>
    <Properties/>
    <Authentication>
      <GoogleIDToken>
        <Audience useTargetUrl="true"/>
      </GoogleIDToken>
    </Authentication>
    <SSLInfo>
      <Enabled>true</Enabled>
      <Enforce>true</Enforce>
    </SSLInfo>
    <URL>https://httpbin.org/</URL>
  </HTTPTargetConnection>
</TargetEndpoint>
