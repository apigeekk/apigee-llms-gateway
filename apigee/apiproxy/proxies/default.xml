<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
  <Flows>
    <Flow name="Gemini">
      <Description/>
      <Request>
        <Step>
          <Name>GetGeminiAPIKey</Name>
        </Step>
        <Step>
          <Name>AM-Gemini</Name>
        </Step>
      </Request>
      <Response/>
      <Condition>(proxy.pathsuffix MatchesPath "/gemini") and (request.verb = "POST")</Condition>
    </Flow>
    <Flow name="OpenAI">
      <Description/>
      <Request>
        <Step>
          <Name>GetOpenAIAPIKey</Name>
        </Step>
        <Step>
          <Name>AM-Open</Name>
        </Step>
      </Request>
      <Response/>
      <Condition>(proxy.pathsuffix MatchesPath "/openai") and (request.verb = "POST")</Condition>
    </Flow>
    <Flow name="Antropic">
      <Description/>
      <Request>
        <Step>
          <Name>GetAnthropicAPIKey</Name>
        </Step>
        <Step>
          <Name>AM-Anthropic</Name>
        </Step>
      </Request>
      <Response/>
      <Condition>(proxy.pathsuffix MatchesPath "/anthropic") and (request.verb = "POST")</Condition>
    </Flow>
  </Flows>
  <Description/>
  <FaultRules/>
  <PreFlow name="PreFlow">
    <Request>
      <Step>
        <Name>VA-VerifyApiKey</Name>
      </Step>
      <Step>
        <Name>RemoveApiKey</Name>
      </Step>
      <Step>
        <Name>SA-SpikeArrest</Name>
      </Step>
      <Step>
        <Name>EV-Inputs</Name>
      </Step>
      <Step>
        <Name>RF-MissingInputs</Name>
        <Condition> (urirequest.model Equals "") or (urirequest.model Equals null) or (urirequest.prompt Equals null) or (urirequest.prompt Equals "")</Condition>
      </Step>
      <Step>
        <Name>FC-SanitizePrompt</Name>
        <Condition>(verifyapikey.VA-VerifyApiKey.apiproduct.ModelArmorTemplatePath != null) and (verifyapikey.VA-VerifyApiKey.apiproduct.ModelArmorTemplatePath != "")</Condition>
      </Step>
      <Step>
        <Name>DynamicQuota</Name>
      </Step>
      <Step>
        <Name>RF-TooManyRequests</Name>
        <Condition> (message.content Like "*Spike arrest violation*")</Condition>
      </Step>
      <Step>
        <Condition>message.content Like "*Quota limit exceeded*"</Condition>
        <Name>RF-QuotaExceeded</Name>
      </Step>
    </Request>
    <Response/>
  </PreFlow>
  <PostFlow name="PostFlow">
    <Request/>
    <Response>
      <Step>
        <Name>EV-TokenCounts</Name>
      </Step>
      <Step>
        <Name>DC-TokensCount</Name>
      </Step>
    </Response>
  </PostFlow>
  <HTTPProxyConnection>
    <BasePath>/v1/llms-gw-api</BasePath>
    <Properties/>
    <VirtualHost>default</VirtualHost>
  </HTTPProxyConnection>
  <RouteRule name="default">
    <TargetEndpoint>default</TargetEndpoint>
  </RouteRule>
</ProxyEndpoint>
